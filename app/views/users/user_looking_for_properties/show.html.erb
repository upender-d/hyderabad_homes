<div class="center_wrap">
  <div class="content_box">
    <h1 class="title"> User Looking for Property details </h1>
    <div class="map_right">
      <div class="buttons_size">
        <span><%= link_to "Edit User Looking For Property" , edit_users_user_looking_for_property_path, :class => 'read_more', :title => 'update Property' %></span>
        <span><%= link_to "View All Looking for Properties" , users_user_looking_for_properties_path, :class => 'read_more', :title => 'Properties' %></span>
      </div>
      <div class="location">
        <h2 class="heads" style="margin:0px 0px 15px 0px;"><span> Location Map</span></h2>
        <span><%= image_tag "http://maps.google.com/maps/api/staticmap?size=425x350&sensor=false&zoom=16&markers=#{@user_looking_for_property.latitude}%2C#{@user_looking_for_property.longitude}" %></span>
      </div>
    </div>

    <div class="details">
      <h2 class="heads"><span> Looking For Property Details</span></h2>

      <table style="width:100%;" class="table">

        <tr>
          <td style="align:right;" class="label">Property Type</td>
          <td style="align: left;"><%= @user_looking_for_property.property.name %></td>
        </tr>

        <tr>
          <td style="align: right;" class="label">Interested to</td>
          <td style="align: left;"><%= @user_looking_for_property.looking_for.name %></td>
        </tr>

        <tr>
          <td style="align: right;" class="label">Price</td>
          <td style="align: left;"><%= @user_looking_for_property.price %></td>
        </tr>

      </table>
      <h2 class="heads" style="margin-top:20px;"><span> Location details</span></h2>
      <table style =" width:100%;cellspacing: 0; cellpadding: 0; border: -1px;" class="table">
        <tr>
          <td style="align: left;"><%= @user_looking_for_property.location %></td>
        </tr>
      </table>
    </div>
  </div>

  <h2 class="heads" style="margin-top:20px;"><span>List of Properties nearby your Property (within 10kms)</span></h2>
  <div style="border:1px solid #CCC; width: 942px;">
    <div id="gmaps4rails_map">
      <%= gmaps4rails(@json) %>
    </div>
  </div>
</div>

<style>
    #gmaps4rails_map
    {
        width: 940px;
        height: 350px;
    }
</style>