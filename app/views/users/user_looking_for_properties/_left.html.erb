<div class="links">
  <ul>
    <li>
      <h1 class="title"> Quick Search </h1>
      <br>
      <%= form_tag users_user_looking_for_properties_path, :method => :get do %>
            <div id="input_form" >
              <%= text_field_tag :search, params[:search], :name => "addr", :class=>"textfield2" ,:value=>'Search Location',:onfocus=>"if(this.value=='Search Location'){ this.value=''; this.style.color='#999999';}",:onblur=>"if(this.value=='') {this.value='Search Location';this.style.color='grey';}" %>
              <input type="reset" id="pick_addr" class="myButton" />
               <%= image_submit_tag("search.png") %>
            </div> <br/>

      <% end %>
    </li>
  </ul>
</div>