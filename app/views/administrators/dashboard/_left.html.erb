<div class="links">
  <ul>
    <li>
      <h1 class="title"> Quick Search </h1>
      <br>
      <%= form_tag administrators_properties_path, :method => :get do %>
          <div id="input_form" >
            <%= text_field_tag :search, params[:search], :class=>"text_field" ,:value=>'Search Users',:onfocus=>"if(this.value=='Search Users'){ this.value=''; this.style.color='#999999';}",:onblur=>"if(this.value=='') {this.value='Search Users';this.style.color='grey';}" %> <br/>
            <%= image_submit_tag("search.png") %>
          </div> <br/>

      <% end %>
    </li>
  </ul>
</div>
