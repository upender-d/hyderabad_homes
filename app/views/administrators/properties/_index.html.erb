<div class="content_box1">
  <%if @properties.present?%>

      <h1 class="title"> List of properties  </h1>

      <table border="0" class="table2" width="100%">
        <tr>
          <th scope="col"><%= "Property type" %></th>
          <th scope="col">&nbsp;</th>
          <th scope="col">&nbsp;</th>
          <th scope="col">&nbsp;</th>
        </tr>
        <% @properties.each do |property| %>
            <tr>
              <td><%= property.name %></td>
              <td><a class="view"><%= link_to 'Show', [:administrators,property] %></a></td>
              <td><a class="edit"><%= link_to 'Edit', edit_administrators_property_path(property) %></a></td>
              <td><a class="remove"><%= link_to 'Destroy', [:administrators,property], :confirm => 'Are you sure?', :method => :delete %></a>
              </td>
            </tr>
        <% end %>
      </table>

      <div style="width:auto; clear:both; margin:10px 0px 10px 0px; float:right; color:#B6316C;">
        <h4 align="right"><%= will_paginate @properties%></h4>
      </div>
     <span><%= link_to 'New Property',  new_administrators_property_path, :class => 'read_more', :title => 'Create Property' %></span>
      <table>
        <tr>
          <td>
            <%= gmaps4rails(@json) %>
          </td>
        </tr>
      </table>

  <%else%>
      <p>Currently there are no properties</p>
      Click here to create &nbsp;&nbsp;<%= link_to 'New Property',  new_administrators_property_path , :class => 'read_more', :title => 'Create Property' %>

  <%end%>
</div>

<style>
  .content_box1
{
    width:720px;
    float:left;
    margin-top:10px;
      height: 245px;
}
</style>
