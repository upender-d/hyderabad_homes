<div class="content_box1">
  <%if @ownership_types.present?%>

      <h1 class="title"> List of properties  </h1>

      <table border="0" class="table2" width="100%">
        <tr>
          <th scope="col"><%= "Property type" %></th>
          <th scope="col">&nbsp;</th>
          <th scope="col">&nbsp;</th>
          <th scope="col">&nbsp;</th>
        </tr>
        <% @ownership_types.each do |ownership_type| %>
            <tr>
              <td><%= ownership_type.name %></td>
              <td><a class="view"><%= link_to 'Show', [:administrators,ownership_type] %></a></td>
              <td><a class="edit"><%= link_to 'Edit', edit_administrators_ownership_type_path(ownership_type) %></a></td>
              <td><a class="remove"><%= link_to 'Destroy', [:administrators,ownership_type], :confirm => 'Are you sure?', :method => :delete %></a>
              </td>
            </tr>
        <% end %>
      </table>

      <div style="width:auto; clear:both; margin:10px 0px 10px 0px; float:right; color:#B6316C;">
        <h4 align="right"><%= will_paginate @ownership_types%></h4>
      </div>
      <span><%= link_to 'New Property',  new_administrators_ownership_type_path, :class => 'read_more', :title => 'Create User Property' %></span>

  <%else%>
      <p>Currently there are no properties</p>
      Click here to create<%= link_to 'New User Property',  new_administrators_ownership_type_path , :class => 'read_more', :title => 'Create Looking for Property' %>

  <%end%>
</div>

<style>
    .content_box1
    {
        width:720px;
        float:left;
        margin-top:10px;
        height: 245px;
    }
</style>
